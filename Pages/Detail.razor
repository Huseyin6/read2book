@page "/detail/{id:int}"
@using read2book.Services
@inject IBookService BookService
<div class="row">
    <h2 class="col-md-6 dl-horizontal">Book Detail</h2>
</div>
<div class="row">
    <dl class="col-md-6 dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @model.Name
        </dd>

        <dt>
            Author
        </dt>

        <dd>
            @model.Author
        </dd>

        <dt>
            Begin Date
        </dt>

        <dd>
            @model.BeginToReadDate
        </dd>

        <dt>
            End Date
        </dt>

        <dd>
            @model.EndToReadDate
        </dd>
        <dt>
            Page Count
        </dt>

        <dd>
            @model.PageCount
        </dd>

        <dt>
            Abstract
        </dt>

        <dd>
            @model.Abstract
        </dd>

    </dl>
</div>
<div class="form-actions no-color esh-link-list">
    <a href="@($"/Edit/{model.Id}")"  class="btn btn-xs btn-primary">
        <i class="fa fa-pencil-square-o"></i>
        <span class="hidden-sm hidden-xs" style="margin-left: 5px;">Edit</span>
    </a>
    <a href="/book" class="btn btn-xs btn-warning">
        Back to list
    </a>
</div>


@code{
    [Parameter]
    public int Id { get; set; }
    private read2book.Data.Book model;
    
    protected override void OnInitialized()
    {
        model= BookService.GetBook(Id);
    }


}